<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ua.viasat.tvguide.TitleFragment"
    android:focusableInTouchMode="false"
    android:id="@+id/fragmentLinearLayout"
    android:orientation="vertical"
    android:textAlignment="gravity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TitleName"
        android:id="@+id/titleTv"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <FrameLayout
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:layout_height="250dp"
        android:layout_below="@id/titleTv"
        android:id="@+id/frameL">
        <ImageView

            android:layout_below="@id/titleTv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/TitleImageView1" />
    </FrameLayout>



    <ScrollView
        android:layout_below="@id/frameL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/TitleTextView1"
            android:layout_gravity="center_horizontal"

            android:paddingEnd="0.1dp"
            android:paddingLeft="5dp"
            android:singleLine="false"
            android:textSize="@dimen/pd14"
            android:gravity="start|end" />
    </ScrollView>


</RelativeLayout>
